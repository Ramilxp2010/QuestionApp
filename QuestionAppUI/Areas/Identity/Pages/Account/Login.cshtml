@page "/identity/account/login"
@model QuestionAppUI.Areas.Identity.Account.Pages.LoginModel

<h1 class="page-heading text-uppercase mb-4">Enter your Login and Password</h1>
<div class="row justify-content-center create-form">
    <div class="col-xl-8 col-lg-10 form-layout">
        <form method="post">
            <div class="mb-3">
                <label for="userName" class="form-label">Enter your Login</label>
                <input asp-for="UserVM.UserName" maction="" id="userName" class="form-control" />
            </div>
            <div class="mb-3">
                <label for="userPassword" class="form-label">Enter your Password</label>
                <input asp-for="UserVM.Password" id="userPassword" class="form-control" type="password" />
            </div>
            <button type="submit" class="btn btn-primary">Login</button>
        </form>
    </div>
</div>
